<Window x:Class="ShopFloor.CathegoryMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopFloor"
        mc:Ignorable="d"
        Title="CathegoryMain" Height="300" Width="300">
    <Grid>
        <ListBox  HorizontalAlignment="Left" Height="299" Margin="12,60,0,0" VerticalAlignment="Top" Width="235">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding Name}"/>
                        <Label Content="{Binding Price}" FontSize="11" ContentStringFormat="0 Ft"/>
                        <Label Content="{Binding Quantity}" FontSize="11" ContentStringFormat="0 db"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
