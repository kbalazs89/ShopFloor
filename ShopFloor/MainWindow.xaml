            <Button x:Name="_2" Content="BOEING" Height="40" Margin="0,0,0.2,0" Click="ClickOnCat"/>
            <Button Content="Button" Height="40" Margin="0,0,0.2,0"/>
            <Button Content="Button" Height="40" Margin="0,0,0.2,0"/>
            <Button Content="Button" Height="40" Margin="0,0,0.2,0"/>
            <Button Content="Button" Height="40" Margin="0,0,0.2,0"/>
        </StackPanel>

    </Grid>
</Window>
